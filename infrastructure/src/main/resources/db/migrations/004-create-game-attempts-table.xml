<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="004-create-game-attempts-table" author="kotlin-wordle-training">
        <createTable tableName="game_attempts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_game_attempts_user" references="users(id)"/>
            </column>
            <column name="word_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_game_attempts_word" references="words(id)"/>
            </column>
            <column name="word" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="attempt_number" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="feedback" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-game-attempts-user-word-index" author="kotlin-wordle-training" runInTransaction="false">
        <ext:createIndexConcurrently tableName="game_attempts" indexName="idx_game_attempts_user_word">
            <column name="user_id"/>
            <column name="word_id"/>
        </ext:createIndexConcurrently>
    </changeSet>

</databaseChangeLog>
