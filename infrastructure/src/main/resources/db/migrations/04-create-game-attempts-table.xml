<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="04-create-game-attempts-table" author="workshop">
        <createTable tableName="game_attempts">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_game_attempts_users" references="users(id)"/>
            </column>
            <column name="word_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_game_attempts_words" references="words(id)"/>
            </column>
            <column name="attempt_number" type="int">
                <constraints nullable="false" />
            </column>
            <column name="word" type="varchar(5)">
                <constraints nullable="false" />
            </column>
            <column name="feedback" type="varchar(5)">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>